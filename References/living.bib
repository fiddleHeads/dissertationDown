  shorttitle = {Categorizing the {{Social Context}} of the {{Wildland Urban Interface}}},
  author = {Paveglio, Travis B. and Moseley, Cassandra and Carroll, Matthew S. and Williams, Daniel R. and Davis, Emily Jane and Fischer, A. Paige},
